<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:contentPadding="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="1dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_alignParentStart="true"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/wifi_access_point_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/wifi_name"
            android:layout_marginTop="@dimen/subtext_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:textSize="@dimen/subtext_font_size"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/wifi_name"
            android:textAppearance="?attr/textAppearanceListItem" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/wifi_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_alignParentEnd="true"
            android:textAppearance="?attr/textAppearanceListItem" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

